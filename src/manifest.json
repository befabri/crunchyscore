{
    "manifest_version": 2,
    "name": "CrunchyScore",
    "version": "0.0.1",
    "description": "__MSG_extensionDescription__",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_locale": "en",
    "permissions": [
      "https://www.crunchyroll.com/",
      "https://api.crunchyscore.app/",
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },  
    "content_scripts": [
      {
        "matches": [
          "https://www.crunchyroll.com/*"
        ],
        "js": ["script/content.js"]
      }
    ],"browser_action": {
      "default_popup": "./popup/popup.html"
    }
  }
  